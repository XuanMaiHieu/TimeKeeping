<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView_ten"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Lam Gi Do"
            android:textSize="30dp"
            android:gravity=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Ngày bắt đầu:"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_ten" />

        <TextView
            android:id="@+id/textView_ngay"
            android:layout_width="127dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="31/01/2002"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_ten" />

        <TextView
            android:id="@+id/textView124"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:layout_marginEnd="116dp"
            android:gravity="center_vertical"
            android:text="Tổng lương:"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_ten" />

        <TextView
            android:id="@+id/textView_tong_luong"
            android:layout_width="127dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="100000000"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/textView_ngay"
            app:layout_constraintTop_toBottomOf="@+id/textView_ten" />



</androidx.constraintlayout.widget.ConstraintLayout>